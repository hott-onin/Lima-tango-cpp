								<directory>${omniorb-lib}</directory>
							</lib>

							<lib>
								<name>COS421_rt</name>
								<type>shared</type>
								<directory>${omniorb-lib}</directory>
							</lib>
							
							<!-- zeromq 64 bits -->
							<lib>
								<name>zmq</name>
								<type>shared</type>
								<directory>${zeromq-lib}</directory>
							</lib>
